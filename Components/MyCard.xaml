<UserControl
    x:Class="StudentInformation.Components.MyCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StudentInformation.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="180" Height="250"
    mc:Ignorable="d">
    <Border
        Height="auto"
        Margin="0,0,5,10"
        Background="#ffffff"
        BorderBrush="#7E60BF"
       
        CornerRadius="30">
        <StackPanel>

            <Border
                x:Name="BorderAvatar"
                Width="100"
                Height="100"
                Margin="0,40,0,0"
                Background="Yellow"
                CornerRadius="50" />
            <TextBlock
                x:Name="TextName"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                FontFamily="{StaticResource moul}"
                FontSize="16"
                Text="Roeun Chanthou" />
            <TextBlock
                x:Name="TextCourse"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                FontFamily="{StaticResource kantumruy}"
                FontSize="14"
                Text="C# Programming" />
        </StackPanel>
    </Border>
</UserControl>
